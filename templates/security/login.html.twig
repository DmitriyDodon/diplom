{% extends 'base.html.twig' %}

{% block title %}{{ "Log in"|trans }}!{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }}, <a
                        href="{{ path('app_logout') }}">{{ "Logout"|trans }}</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">{{ "Please sign in"|trans }}</h1>
        <label for="inputUsername">{{ "Username"|trans }}</label>
        <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control"
               autocomplete="username" required autofocus>
        <label for="inputPassword" class="mt-1">{{ "Password"|trans }}</label>
        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password"
               required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >


        <div class="checkbox mb-3 mt-3">
            <label>
                <input type="checkbox" name="_remember_me"> {{ "Remember me"|trans }}
            </label>
        </div>

        <div class="row">
            <div class="col-6">
                <button class="btn btn-lg btn-primary" type="submit">
                    {{ "Sign in"|trans }}
                </button>
            </div>
            <div class="col-6 d-flex justify-content-end">
                <a class="btn btn-lg btn-primary" href="{{ path("app_register") }}">
                    {{ "Register"|trans }}
                </a>
            </div>
        </div>
    </form>
{% endblock %}
