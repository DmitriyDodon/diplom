{% extends 'base.html.twig' %}
{% block additionalCss %}
    <link href="{{ asset("custom/css/cross-price.css") }}" rel="stylesheet">
{% endblock %}
{% block body %}
    {% for item in cartItems %}
        <div class="row">
            <div class="col-12 d-flex justify-content-center">
                <div class="card mb-3" style="max-width: 540px;">
                    <div class="row g-0">
                        <div class="col-md-4 d-flex justify-content-center">
                            <img src="{{ item.product.imageUrl }}" class="img-fluid rounded-start" alt="...">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">{{ item.product.title }}</h5>
                                <p class="card-text">
                                    {% if item.discount %}
                                {{ "Old price:" }}<div class="cross">{{ item.price }}</div><br>{{ "Price with discount:" }}<div><br>{{ item.price - item.discount }}</div>
                                {% else %}
                                    {{ item.price }}
                                {% endif %}
                                <br>
                                {{ "Quantity"|trans }} {{ item.quantity }}
                                </p>
                                <p class="card-text"><small class="text-muted"></small></p>
                            </div>
                        </div>
                    </div>
                    <div class="pt-3 d-flex mb-2">
                            <div class=" row col-12 d-flex justify-content-center">
                                <div class="col-4 d-flex justify-content-center pt-3">
                                    <a class="btn btn-primary" href="#">{{ "Remove from cart" }}</a>
                                </div>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
    <div class="row">
        <div class="col-12 d-flex justify-content-center">
            <a class="col-3 btn btn-primary" href="{{ path('create_order_from_cart') }}">{{ "Make order" }}</a>
        </div>
    </div>
{% endblock %}